@* Views/Book/DeleteBook.cshtml *@
@model FindMyBook.ViewModels.BookViewModel
@{
    ViewBag.Title = "Delete Book";
    Layout = "~/Views/Shared/_Admin_Dashboard_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Delete Book</h2>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this book?</h4>
    </div>

    <div class="card mb-4">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Url.Content(Model.BookImage)" class="img-fluid rounded-start" alt="@Model.Title">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">
                        <strong>ISBN:</strong> @Model.ISBN<br />
                        <strong>Author:</strong> @Model.AuthorName<br />
                        <strong>Publisher:</strong> @Model.PublisherName<br />
                        <strong>Status:</strong> @Model.Status<br />
                        <strong>Language:</strong> @Model.BookLanguage<br />
                        <strong>Price:</strong> @Model.Price<br />
                        <strong>Pages:</strong> @Model.Pages<br />
                        <strong>Published Date:</strong> @Model.PublishedDate<br />
                        <strong>Rating:</strong> @Model.Rating
                    </p>
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>