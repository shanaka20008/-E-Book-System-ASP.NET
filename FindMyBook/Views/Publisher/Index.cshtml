@model IEnumerable<FindMyBook.Models.table_publisher>

@{
    if (Session["AdminName"] != null)
    {
        ViewBag.AdminName = $"{Session["AdminName"]}";
        ViewBag.Title = "Entire publisher detail";
        Layout = "~/Views/Shared/_Admin_Dashboard_Layout.cshtml";

    }
    else
    {
        ViewBag.Title = "Authors List";
        Layout = "~/Views/Shared/_Admin_Dashboard_Layout.cshtml";
    }
}

<table class="table table-striped table-hover mb-0" id="authorsTable">
    <tr>
        <th class="text-center">
            No
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.publisher_id)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.publisher_name)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.address)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.country)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.publisher_phone_number)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.publisher_email)
        </th>
        <th class="text-center">
            Actions
        </th>
    </tr>

    @{

        int serialNumber = 0;
    }

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center">
                @{
                    serialNumber++;
                }
                @serialNumber
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.publisher_id)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.publisher_name)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.country)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.publisher_phone_number)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.publisher_email)
            </td>
            <td class="text-center">
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
